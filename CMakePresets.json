{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "ninja-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF"
      }
    },
    {
      "name": "ninja-relwithdebinfo",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-relwithdebinfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "ninja-release", "configurePreset": "ninja-release" },
    { "name": "ninja-debug", "configurePreset": "ninja-debug" },
    { "name": "ninja-relwithdebinfo", "configurePreset": "ninja-relwithdebinfo" }
  ],
  "testPresets": [
    { "name": "ninja-release", "configurePreset": "ninja-release" },
    { "name": "ninja-debug", "configurePreset": "ninja-debug" },
    { "name": "ninja-relwithdebinfo", "configurePreset": "ninja-relwithdebinfo" }
  ]
}
